{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "target": "ES2018",
    "jsx": "react",
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "typeAcquisition": { "enable": true },
  "exclude": ["node_modules"]
}
